name: data_check
conda_env: conda.yml

entry_points:
  main:
    parameters:

      reference_artifact:
        description: Reference CSV file to compare the new csv to
        type: string

      sample_artifact:
        description: Input CSV file to be tested
        type: string

      min_price:
        description: Minimum accepted price
        type: float

      max_price:
        description: Maximum accepted price
        type: float

      kl_threshold:
        description: Threshold for the KS divergence test on the neighborhood group column
        type: float

    command: "pytest . -vv --reference_artifact {reference_artifact} --sample_artifact {sample_artifact} --min_price {min_price} --max_price {max_price} --kl_threshold {kl_threshold}"
