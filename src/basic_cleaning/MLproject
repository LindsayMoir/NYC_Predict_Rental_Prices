name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: "input dataset"
        type: string
      output_artifact:
        description: "output dataset"
        type: string
      artifact_type:
        description: "output dataset type"
        type: string
      artifact_description:
        description: "output dataset description"
        type: string
      min_price:
        description: "price minimum"
        type: int
      max_price:
        description: "price maximum"
        type: int
    command: >-
        python run.py --input_artifact {input_artifact} \
                      --output_artifact {output_artifact} \
                      --artifact_type {artifact_type} \
                      --artifact_description {artifact_description} \
                      --min_price {min_price} \
                      --max_price {max_price}

